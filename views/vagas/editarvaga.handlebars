<head>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/index.css">
</head>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="/js/vaga.js"></script>

{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="page margin_paginas">
    <div class="flex fill">
        <div class="card container width60">
             <div class="card-body flex_center flex_column">
                <form class="fill wrap" action="/empresas/vagas/editar" method="post">
                    <div class="margin_left3 flex_column width84">
                        <label for="titulo">Titulo da Vaga:</label>
                        <input class="campo_curriculo margin_top" type="text" name="titulo" id="titulo" value="{{vaga.titulo}}">
                    </div>
                    {{#if (neq user.tipo 2)}}
                        <div class="margin_left3 flex_column margin_top width84">
                            <label for="empresa">Empresa:</label>
                            <input class="campo_curriculo margin_top" type="text" name="empresa" id="empresa" value="{{vaga.empresa}}">
                        </div>
                    {{/if}}
                    <div class="margin_left3 flex_column margin_top10">
                        <label class="margin_bottom10" for="descricao">Descrição da Vaga:</label>
                        <div id="editor-container" style="height: 200px;">{{{vaga.descricao}}}</div>
                        <input class="campo_curriculo margin_top" type="hidden" name="descricao" id="descricao">
                    </div>
                    <div class="margin_left3 flex_column margin_top width40">
                        <label for="localizacao">Localização:</label>
                        <input class="campo_curriculo margin_top fill" type="text" name="localizacao" id="localizacao" value="{{vaga.localizacao}}">
                    </div>
                    <div class="flex_column margin_top width37 margin_left3">
                        <label for="modalidade">Modalidade:</label>
                        <select class="campo_curriculo margin_top fill" name="modalidade" id="modalidade">
                            <option value="1" {{#if (eq vaga.modalidade 1)}}selected{{/if}}>Presencial</option>
                            <option value="2" {{#if (eq vaga.modalidade 2)}}selected{{/if}}>Remoto</option>
                            <option value="3" {{#if (eq vaga.modalidade 3)}}selected{{/if}}>Híbrido</option>
                        </select>
                    </div>
                    <div class="margin_left3 flex_column margin_top width40">
                        <label for="tipo">Tipo</label>
                        <select class="campo_curriculo margin_top fill" name="tipo" id="tipo">
                            <option value="1" {{#if (eq vaga.tipo 1)}}selected{{/if}}>Estágio</option>
                            <option value="2" {{#if (eq vaga.tipo 2)}}selected{{/if}}>Auxiliar</option>
                            <option value="3" {{#if (eq vaga.tipo 3)}}selected{{/if}}>Assistente</option>
                            <option value="4" {{#if (eq vaga.tipo 4)}}selected{{/if}}>Analista Júnior</option>
                            <option value="5" {{#if (eq vaga.tipo 5)}}selected{{/if}}>Analista Pleno</option>
                            <option value="6" {{#if (eq vaga.tipo 6)}}selected{{/if}}>Analista Sênior</option>
                            <option value="7" {{#if (eq vaga.tipo 7)}}selected{{/if}}>Coordenador</option>
                            <option value="8" {{#if (eq vaga.tipo 8)}}selected{{/if}}>Gerente</option>
                            <option value="9" {{#if (eq vaga.tipo 9)}}selected{{/if}}>Diretor</option>
                        </select>
                    </div>
                     <div class="flex_column margin_top width37 margin_left3">
                        <label for="carga_horaria">Período:</label>
                        <select class="campo_curriculo margin_top fill" name="carga_horaria" id="carga_horaria">
                            <option value="1" {{#if (eq vaga.carga_horaria 1)}}selected{{/if}}>Período Matutino (Manhã)</option>
                            <option value="2" {{#if (eq vaga.carga_horaria 2)}}selected{{/if}}>Período Vespertino (Tarde)</option>
                            <option value="3" {{#if (eq vaga.carga_horaria 3)}}selected{{/if}}>Período Noturno</option>
                            <option value="4" {{#if (eq vaga.carga_horaria 4)}}selected{{/if}}>Período Integral</option>
                            <option value="5" {{#if (eq vaga.carga_horaria 5)}}selected{{/if}}>Horário Flexível</option>
                        </select>
                    </div>
                     <div class="margin_left3 flex_column margin_top width84">
                        <label for="area">Área:</label>
                        <select class="campo_curriculo margin_top fill" name="area" id="area">
                            <option value="1" {{#if (eq vaga.area 1)}}selected{{/if}}>Administração</option>
                            <option value="2" {{#if (eq vaga.area 2)}}selected{{/if}}>Processos Gerenciais</option>
                            <option value="3" {{#if (eq vaga.area 3)}}selected{{/if}}>Gestão do Agronegócio</option>
                            <option value="4" {{#if (eq vaga.area 4)}}selected{{/if}}>Recursos Humanos</option>
                            <option value="5" {{#if (eq vaga.area 5)}}selected{{/if}}>Vendas</option>
                            <option value="6" {{#if (eq vaga.area 6)}}selected{{/if}}>Arquitetura e Urbanismo</option>
                            <option value="7" {{#if (eq vaga.area 7)}}selected{{/if}}>Engenharia Civil</option>
                            <option value="8" {{#if (eq vaga.area 8)}}selected{{/if}}>Engenharia Mecânica</option>
                            <option value="9" {{#if (eq vaga.area 9)}}selected{{/if}}>Engenharia Elétrica</option>
                            <option value="10" {{#if (eq vaga.area 10)}}selected{{/if}}>Engenharia Química</option>
                            <option value="11" {{#if (eq vaga.area 11)}}selected{{/if}}>Engenharia de Produção</option>
                            <option value="12" {{#if (eq vaga.area 12)}}selected{{/if}}>Engenharia de Computação</option>
                            <option value="13" {{#if (eq vaga.area 13)}}selected{{/if}}>Engenharia de Software</option>
                            <option value="14" {{#if (eq vaga.area 14)}}selected{{/if}}>Engenharia Ambiental e Sanitária</option>
                            <option value="15" {{#if (eq vaga.area 15)}}selected{{/if}}>Engenharia de Alimentos</option>
                            <option value="16" {{#if (eq vaga.area 16)}}selected{{/if}}>Engenharia de Telecomunicações</option>
                            <option value="17" {{#if (eq vaga.area 17)}}selected{{/if}}>Engenharia Biomédica</option>
                            <option value="18" {{#if (eq vaga.area 18)}}selected{{/if}}>Tecnologia da Informação</option>
                            <option value="19" {{#if (eq vaga.area 19)}}selected{{/if}}>Design Gráfico</option>
                            <option value="20" {{#if (eq vaga.area 20)}}selected{{/if}}>Enfermagem</option>
                            <option value="21" {{#if (eq vaga.area 21)}}selected{{/if}}>Fisioterapia</option>
                            <option value="22" {{#if (eq vaga.area 22)}}selected{{/if}}>Psicologia</option>
                            <option value="23" {{#if (eq vaga.area 23)}}selected{{/if}}>Pedagogia</option>
                            <option value="24" {{#if (eq vaga.area 24)}}selected{{/if}}>Serviço Social</option>
                            <option value="25" {{#if (eq vaga.area 25)}}selected{{/if}}>Logística</option>
                            <option value="26" {{#if (eq vaga.area 26)}}selected{{/if}}>Jornalismo</option>
                            <option value="27" {{#if (eq vaga.area 27)}}selected{{/if}}>Turismo e Hospitalidade</option>
                            <option value="28" {{#if (eq vaga.area 28)}}selected{{/if}}>Marketing</option>
                        </select>
                    </div>
                    
                    <div class="flex_meio margin_top20 width100">
                        <input type="hidden" name="id" value="{{vaga._id}}">
                        <button class="salvar_curriculo small" type="submit">Editar Vaga</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>