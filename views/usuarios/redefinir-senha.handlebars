{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card container fill" style="margin: 18rem;">
    <div class="card-body">
        <h2 class="txt_center">Redefinir sua senha:</h2>
        <form class="flex_column-center margin_top40" action="/usuarios/redefinir-senha" method="POST">
                <input type="hidden" name="token" value="{{token}}">
                <div class="flex_row fill">
                    <input class="campo_curriculo width40 margin_left3" type="password" name="senha" placeholder="Nova senha">
                    <input class="campo_curriculo width40 margin_left3" type="password" name="senha2" placeholder="Confirmar senha">
                </div>
            <button class="button_add margin_top30 large" type="submit">Redefinir Senha</button>
        </form>
    </div>
</div>