                                    <option {{#if (eq usuario.empresa.0.departamento "Segurança")}} selected {{/if}} value="Segurança">Segurança</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Serviços")}} selected {{/if}} value="Serviços">Serviços</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Tecnologia da Informação")}} selected {{/if}} value="Tecnologia da Informação">Tecnologia da Informação</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Telecomunicações")}} selected {{/if}} value="Telecomunicações">Telecomunicações</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Transporte")}} selected {{/if}} value="Transporte">Transporte</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Turismo")}} selected {{/if}} value="Turismo">Turismo</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Varejo")}} selected {{/if}} value="Varejo">Varejo</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Veterinária")}} selected {{/if}} value="Veterinária">Veterinária</option>
                                </select>
                            </li>
                            <li class="flex_column width40 margin_left">
                                <label for="num_func" class="margin_top20">Numero de Funcionarios</label>
                                <select class="campo_curriculo margin_top" name="num_func">
                                    <option value="">Selecione o numero de funcionarios</option>
                                    <option value="1" {{#if (eq usuario.empresa.0.num_func 1)}} selected {{/if}}>1-10</option>
                                    <option value="2" {{#if (eq usuario.empresa.0.num_func 2)}} selected {{/if}}>11-50</option>
                                    <option value="3" {{#if (eq usuario.empresa.0.num_func 3)}} selected {{/if}}>51-100</option>
                                    <option value="4" {{#if (eq usuario.empresa.0.num_func 4)}} selected {{/if}}>101-200</option>
                                    <option value="5" {{#if (eq usuario.empresa.0.num_func 5)}} selected {{/if}}>201-500</option>
                                    <option value="6" {{#if (eq usuario.empresa.0.num_func 6)}} selected {{/if}}>501-1000</option>
                                    <option value="7" {{#if (eq usuario.empresa.0.num_func 7)}} selected {{/if}}>+1000</option>
                                </select>
                            </li>
                            <li class="flex_column width82 margin_top30">
                                <label for="descricao">Descrição:</label>
                                <textarea class="campo_curriculo width100 heigth140" name="descricao" id="descricao" placeholder="Coloque aqui uma breve descrição da sua empresa.">{{usuario.empresa.0.descricao}}</textarea>
                            </li>
                            <li class="flex_column width82 margin_top30">
                                <label for="misao">Missão:</label>
                                <textarea class="campo_curriculo width100 heigth45" name="misao" id="misao" placeholder="Qual a missão dessa empresa?">{{usuario.empresa.0.missao}}</textarea>
                            </li>
                            <li class="flex_column width82 margin_top30">
                                <label for="sustentavel">Objetivos Sustentáveis:</label>
                                <textarea class="campo_curriculo width100 heigth140" name="sustentavel" id="sustentavel" placeholder="Fale mais sobre os objetivos sustentáveis da empresa:">{{usuario.empresa.0.sustentaveis}}</textarea>
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="dados">
                    <div class="secao_texto">
                        <h3>Contato:</h3>
                    </div>
                    <div class="secao_campos">
                        <ol class="list_flex fill">
                            <li class="width82">
                                <div class="Form_Title">E-mail de contato: (deixe em branco caso seja o mesmo do e-mail de registro)</div>
                                <input class="campo_curriculo fill" type="email" name="email" value="{{usuario.empresa.0.email_contato}}">
                            </li>
                            <li class="width60 margin_top30">
                                <div class="Form_Title">Endereço:</div>
                                <input class="campo_curriculo fill" type="text" name="endereco" value="{{usuario.empresa.0.endereco}}">
                            </li>
                            <li class="width20 margin_top30 margin_left">
                                <div class="Form_Title">Telefone:</div>
                                <input class="campo_curriculo fill" type="number" name="tel" value="{{usuario.empresa.0.tel}}">
                            </li>
                            <li class="width82 margin_top30">
                                <div class="Form_Title">Site:</div>
                                <input class="campo_curriculo fill" type="text" name="site" value="{{usuario.empresa.0.site}}">
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="dados bloco_salvar">
                    <div class="bloco_salvar">
                        <input type="hidden" name="user_id" value="{{usuario._id}}">
                        <button class="salvar_curriculo" type="submit">Atualizar informações</button>
                    </div>
                </div>
            </div>
        </form>
        </div>
    </div>
</div>