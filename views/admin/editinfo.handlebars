                                    <option {{#if (eq usuario.empresa.0.departamento "Recursos Humanos")}} selected {{/if}} value="Recursos Humanos">Recursos Humanos</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Hotelaria")}} selected {{/if}} value="Hotelaria">Hotelaria</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Imobiliária")}} selected {{/if}} value="Imobiliária">Imobiliária</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Informática")}} selected {{/if}} value="Informática">Informática</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Internet e Tecnologia")}} selected {{/if}} value="Internet e Tecnologia">Internet e Tecnologia</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Jurídico")}} selected {{/if}} value="Jurídico">Jurídico</option>
