                                    <option {{#if (eq usuario.empresa.0.departamento "Comércio")}} selected {{/if}} value="Comércio">Comércio</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Comunicação")}} selected {{/if}} value="Comunicação">Comunicação</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Construção Civil")}} selected {{/if}} value="Construção Civil">Construção Civil</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Consultoria")}} selected {{/if}} value="Consultoria">Consultoria</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Educação")}} selected {{/if}} value="Educação">Educação</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Energia")}} selected {{/if}} value="Energia">Energia</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Engenharia Civil")}} selected {{/if}} value="Engenharia Civil">Engenharia Civil</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Engenharia Elétrica")}} selected {{/if}} value="Engenharia Elétrica">Engenharia Elétrica</option>
