<head>
    <link rel="stylesheet" href="/css/curriculo.css">
</head>

<div class="page margin_paginas">
    <div class="flex fill">
        <div class="card container">
        <h2 class="fill txt_center margin_top20">Atualizar Informações</h2>
        <form action="/empresas/info/save" method="post">
            <div class="card-body flex_column">
                <div class="dados">
                    <div class="secao_texto">
                        <h3>Sobre a Empresa:</h3>
                    </div>
                    <div class="secao_campos">
                        <ol class="list_flex fill">
                            <li class="width82">
                                <div class="Form_Title">Nome:</div>
                                <input class="campo_curriculo fill" type="text" name="nome" value="{{usuario.nome}}">
                            </li>
                            <li class="flex_column width40">
                                <label for="Departamento" class="margin_top20">Departamento:</label>
