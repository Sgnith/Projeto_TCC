                                    <option {{#if (eq usuario.empresa.0.departamento "Marketing")}} selected {{/if}} value="Marketing">Marketing</option>
                                    <option {{#if (eq usuario.empresa.0.departamento "Medicina")}} selected {{/if}} value="Medicina">Medicina</option>
